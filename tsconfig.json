{
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsxFactory": "createElement",
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": ["dom", "es2016", "es2017", "es2018" ]
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
